<% @questions.each() do |question| %>
  <ol><li><%= question.the_question %><br>
    </li></ol>
  <% end %>

  <h1>Add a new question to the survey:</h1>

  <form action="/surveys/<%= @survey.id %>" method="post">
    <div class="form-group">
      <label>The Question:</label>
      <input type="text" class="form-control" id="the_question" name="the_question">
    </div>
    <div class="form-group">
      <label></label>
      <input type="hidden" class="form-control" id="survey_id" name="survey_id">
    </div>
    <div class="form-group">
      <label></label>
      <input type="hidden" class="form-control" id="id" name="id">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>

    <a href="/surveys/<%= @survey.id() %>/edit">Edit</a><br>
    <a href="/surveys/<%= @survey.id() %>/delete">Delete</a>
